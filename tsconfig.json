{
    "compilerOptions": {
      "outDir": "dist",
      "allowJs": true,
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "noImplicitAny": false,
      "strictNullChecks": true,
      "resolveJsonModule": true,
      "skipDefaultLibCheck": true,
      "skipLibCheck": true,
      "jsx": "preserve",
      "types": ["node"],
      "lib": ["esnext", "dom"],
      "paths": {
        "@bird": ["./packages"]
      }
    },
    "exclude": ["**/node_modules/**", "**/demo/**", "**/example/**"]
  }
  